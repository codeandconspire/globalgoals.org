{
  "name": "globalgoals.org",
  "version": "2.0.8",
  "description": "Public Website for The Global Goals",
  "main": "index.js",
  "scripts": {
    "test": "standard",
    "setup": "./bin/setup",
    "start": "node index.js",
    "restart": "nodemon -r dotenv/config --inspect index.js -e js -i lib/components",
    "postinstall": "echo \"> Don't forget to setup your environment: npm run setup\\n\"",
    "postbuild": "npm run compress",
    "compress:js:app": "gzip -9 -f -c public/index-$npm_package_version.js > public/index-$npm_package_version.js.gz",
    "compress:js:sw": "gzip -9 -f -c public/service-worker.js > public/service-worker.js.gz",
    "compress:js": "npm run compress:js:app && npm run compress:js:sw",
    "compress:css": "gzip -9 -f -c public/index-$npm_package_version.css > public/index-$npm_package_version.css.gz",
    "compress": "npm run compress:css && npm run compress:js",
    "build:js:app": "browserify lib/app/index.js -p common-shakeify -t localenvify -t yo-yoify -t babelify -g unassertify -g uglifyify | uglifyjs -o public/index-$npm_package_version.js",
    "build:js:sw": "browserify lib/app/service-worker.js -t localenvify -t uglifyify -o public/service-worker.js",
    "build:js": "npm run build:js:app && npm run build:js:sw",
    "build:css": "postcss lib/app/index.css --no-map -c postcss.config.js -o public/index-$npm_package_version.css",
    "build:fallback": "postcss lib/app/fallback.css --no-map -o public/fallback-$npm_package_version.css",
    "build": "npm run build:css && npm run build:fallback && npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeandconspire/globalgoals.org.git"
  },
  "author": "code&conspire",
  "license": "CC-BY",
  "bugs": {
    "url": "https://github.com/codeandconspire/globalgoals.org/issues"
  },
  "homepage": "https://github.com/codeandconspire/globalgoals.org#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-plugin-stack-trace-sourcemap": "^1.0.2",
    "babel-preset-env": "^1.6.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "choo-devtools": "^2.2.0",
    "common-shakeify": "^0.4.4",
    "cssnano": "^3.10.0",
    "dedent": "^0.7.0",
    "dotenv": "^4.0.0",
    "koa-postcss-watch": "^1.0.5",
    "koa-send": "^4.1.1",
    "localenvify": "^1.0.1",
    "nodemon": "^1.12.1",
    "normalize.css": "^7.0.0",
    "now": "^7.4.0",
    "postcss-cli": "^4.1.1",
    "postcss-color-function": "^4.0.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.1.0",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-import": "^10.0.0",
    "postcss-selector-matches": "^3.0.1",
    "postcss-url": "^7.1.2",
    "source-map-support": "^0.5.0",
    "standard": "^10.0.3",
    "suitcss-utils-display": "^1.0.2",
    "suitcss-utils-text": "^1.0.0",
    "uglify-js": "^3.1.3",
    "uglifyify": "^4.0.4",
    "unassertify": "^2.0.4",
    "watchify-middleware": "^1.6.0",
    "yo-yoify": "^3.7.3"
  },
  "dependencies": {
    "choo": "^6.6.1",
    "got": "^7.1.0",
    "idb-keyval": "^2.3.0",
    "koa": "^2.3.0",
    "koa-body": "^2.5.0",
    "koa-compose": "^4.0.0",
    "koa-helmet": "^3.2.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1",
    "lodash.debounce": "^4.0.8",
    "lru-cache": "^4.1.1",
    "nanocomponent": "^6.4.6",
    "nanohref": "^3.0.0",
    "nanoraf": "^3.0.1",
    "on-idle": "^3.1.4",
    "prismic-element": "^0.7.0",
    "prismic-javascript": "^1.4.0",
    "prismic-richtext": "^0.2.4",
    "smoothscroll-polyfill": "^0.4.0",
    "universal-analytics": "^0.4.15",
    "y18n": "^3.2.1"
  }
}
