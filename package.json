{
  "name": "globalgoals.org",
  "version": "2.6.2",
  "description": "Public Website for The Global Goals",
  "main": "index.js",
  "scripts": {
    "test": "standard",
    "setup": "./bin/setup",
    "start": "node index.js",
    "restart": "nodemon -r dotenv/config --inspect index.js -e js -i lib/components",
    "postbuild": "npm run compress",
    "compress:js:app": "gzip -9 -f -c public/index-$npm_package_version.js > public/index-$npm_package_version.js.gz",
    "compress:js:sw": "gzip -9 -f -c public/service-worker.js > public/service-worker.js.gz",
    "compress:js": "npm run compress:js:app && npm run compress:js:sw",
    "compress:css": "gzip -9 -f -c public/index-$npm_package_version.css > public/index-$npm_package_version.css.gz",
    "compress": "npm run compress:css && npm run compress:js",
    "build:js:app": "browserify lib/app/index.js -t localenvify -t nanohtml -t babelify -p tinyify | uglifyjs -o public/index-$npm_package_version.js",
    "build:js:sw": "browserify lib/app/service-worker.js -t localenvify -t nanohtml -t babelify -p tinyify | uglifyjs -o public/service-worker.js",
    "build:js": "npm run build:js:app && npm run build:js:sw",
    "build:css": "postcss lib/app/index.css --no-map -c postcss.config.js -o public/index-$npm_package_version.css",
    "build:fallback": "postcss lib/app/fallback.css --no-map -o public/fallback-$npm_package_version.css",
    "build": "npm run build:css && npm run build:fallback && npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeandconspire/globalgoals.org.git"
  },
  "author": "code and conspire",
  "license": "CC-BY-SA-4.0",
  "bugs": {
    "url": "https://github.com/codeandconspire/globalgoals.org/issues"
  },
  "homepage": "https://github.com/codeandconspire/globalgoals.org#readme",
  "devDependencies": {
    "choo-devtools": "^2.5.0",
    "dotenv": "^4.0.0",
    "nodemon": "^1.17.5",
    "source-map-support": "^0.5.3",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "autoprefixer": "^7.2.5",
    "babel-preset-env": "^1.7.0",
    "babelify": "^7.3.0",
    "browserify": "^14.5.0",
    "cccpurge": "^2.0.0",
    "choo": "^6.7.0",
    "choo-service-worker": "^2.4.0",
    "cloudinary": "^1.14.0",
    "dedent": "^0.7.0",
    "got": "^7.1.0",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-compose": "^4.0.0",
    "koa-helmet": "^3.3.0",
    "koa-mount": "^3.0.0",
    "koa-no-trailing-slash": "^2.1.0",
    "koa-postcss-watch": "^1.0.5",
    "koa-router": "^7.4.0",
    "koa-send": "^4.1.3",
    "koa-static": "^4.0.3",
    "localenvify": "^1.0.1",
    "lodash.debounce": "^4.0.8",
    "lru-cache": "^4.1.1",
    "nanocomponent": "^6.5.0",
    "nanohref": "^3.0.1",
    "nanohtml": "^1.5.0",
    "nanoraf": "^3.0.1",
    "normalize.css": "^7.0.0",
    "on-idle": "^3.1.4",
    "p-retry": "^4.1.0",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.1.2",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.2.0",
    "postcss-flexbugs-fixes": "^3.3.0",
    "postcss-import": "^10.0.0",
    "postcss-selector-matches": "^3.0.1",
    "postcss-url": "^7.3.0",
    "prismic-element": "^1.0.0",
    "prismic-javascript": "^2.0.3",
    "prismic-richtext": "^0.4.2",
    "smoothscroll-polyfill": "^0.4.0",
    "suitcss-utils-display": "^1.0.2",
    "suitcss-utils-text": "^1.0.0",
    "tinyify": "^2.5.0",
    "uglify-js": "^3.3.9",
    "universal-analytics": "^0.4.16",
    "watchify-middleware": "^1.7.0",
    "y18n": "^3.2.1"
  }
}
